<% @transfered_accounts.each do |transfered_account| %>
  <% social_account = transfered_account.transferable %>

  <% if transfered_account.accepted %>
    <div class="card">
      <div class="previev <%= social_account.title %>"></div>
      <div class="card_title">
        <h4><%= social_account.title %></h4>
      </div>

      <div class="editing">
        <div class="popup">
            <div class="EditWrapper">
              <div class="Icon" id="EditIcon"></div>
              <li>
                <%= link_to 'Редактировать', edit_social_account_path(social_account) %>
              </li>
            </div>
            <div class="TrashWrapper">
              <div class="Icon" id="TrashIcon"></div>
              <li>
                <%= link_to 'Удалить', social_account, method: :delete, data: { confirm: 'Are you sure?' } %>
              </li>
            </div>
        </div>
      </div>
    </div>
  <% else %>
  <div class="card">
    <div class="previev_unaccepted"></div>
    <div class="previev <%= social_account.title %>"></div>
    <div class="card_title">
      <h4><%= social_account.title %></h4>
    </div>

    <div class="editing">
      <div class="popup">
          <div class="EditWrapper">
            <div class="Icon" id="EditIcon"></div>
            <li>
              <%= link_to 'Редактировать', edit_social_account_path(social_account) %>
            </li>
          </div>
          <div class="TrashWrapper">
            <div class="Icon" id="TrashIcon"></div>
            <li>
              <%= link_to 'Удалить', social_account, method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
          </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
