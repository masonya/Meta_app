
<% @transfered_accounts.each do |t| %>
  <% wallet = t.transferable %>

  <% if t.transferable.class == Wallet %>
    <% if t.accepted %>
      <div class="card">
        <div class="previev <%= wallet.title %>"></div>
        <div class="TitleWrap">
          <div class="card_title"></div>
          <h4><%= wallet.title %></h4>
        </div>

        <div class="editing_transmit">
          <div class="popup_transmit">
              <div class="EditWrapper">
                <div class="Icon" id="EditIcon"></div>
                <li>
                  <%= link_to 'Редактировать', edit_wallet_path(wallet) %>
                </li>
              </div>
              <div class="TrashWrapper">
                <div class="Icon" id="TrashIcon"></div>
                <li>
                  <%= link_to 'Удалить', wallet, method: :delete, data: { confirm: 'Are you sure?' } %>
                </li>
              </div>
          </div>
        </div>
      </div>
    <% else %>
    <div class="card">
      <div class="previev_unaccepted"></div>
      <div class="previev <%= wallet.title %>"></div>
      <div class="TitleWrap">
        <div class="card_title"></div>
        <h4><%= wallet.title %></h4>
      </div>

      <div class="editing_transmit">
        <div class="popup_transmit">
            <div class="EditWrapper">
              <div class="Icon" id="EditIcon"></div>
              <li>
                <%= link_to 'Редактировать', edit_wallet_path(wallet) %>
              </li>
            </div>
            <div class="TrashWrapper">
              <div class="Icon" id="TrashIcon"></div>
              <li>
                <%= link_to 'Удалить', wallet, method: :delete, data: { confirm: 'Are you sure?' } %>
              </li>
            </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>

<% end %>
