  </head>

  <body>

    <!-- <section class="menubar">

    </section> -->

    <% if user_signed_in? %>
      <section class="menubar">
        <%= link_to 'Передаю', root_path %>
        <%= link_to 'Получаю', obtain_index_path %>
        <%= link_to 'Выйти', destroy_user_session_path, method: :delete %>
        <div class="user"></div>
      </section>
      <section class="nav">

           <h1 class="logo"><%= link_to 'Meta', root_path %></h1>
        <ul class="sidebar">
          <li><a href="#s1">Документы</a></li>
          <li><a href="#s2">Аккаунты</a></li>
          <li><a href="#s3">Наставления</a></li>
          <li><a href="#s4">Подписки</a></li>
          <li><a href="#s5">Кошельки</a></li>
        </ul>
      </section>
    <% else %>
      <section class="menubar">
        <%= link_to 'Log in', new_user_session_path %>
        <% link_to 'Sing up', new_user_registration_path %>
      </section>
    <% end %>



    <%= yield %>

  </body>
</html>
