<section class="session">
  <div class="session_logo"></div>
  <div class="session_image"></div>

  <div class="RegistrationForm">
    <h5>Вход</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", type: "text" %>
          <div class="form-group_session">
            <%= f.password_field :password, placeholder: "Пароль", autocomplete: "current-password", type: "password" %>
            <div class="passwordVisibilityButtonSession"></div>
          </div>

        <div class="session_actions">
          <div class="EnterButtonWrapper">
          <%= f.submit "Войти", class: "EnterButton" %>
          <% end %>

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Зарегистрироваться", new_registration_path(resource_name) %><br />
          <% end -%>
          </div>

  </div>
</section>
