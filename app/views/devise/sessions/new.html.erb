<section class="session">
  <div class="session_logo"></div>
  <div class="session_image"></div>
  <div class="session_login">
    <h5>Вход</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", type: "session_login" %>
        </div>

        <div class="field">
          <div class="form-group">
            <%= f.password_field :password, placeholder: "Пароль", autocomplete: "current-password", type: "session_login" %>
            <div class="passwordVisibilityButton"></div>
          </div>
        </div>

  
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="session_actions">
          <%= f.submit "Войти" %>
        </div>
      <% end %>
  </div>
</section>
    <%= render "devise/shared/links" %>
