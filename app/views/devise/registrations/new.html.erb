<section class="registration">
  <div class="session_logo"></div>
  <div class="session_image"></div>

  <div class="RegistrationForm">
    <h5>Создайте аккаунт</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", type: "text" %>
          <%= f.password_field :password, placeholder: "Пароль", autocomplete: "new-password", type: "password" %>
          <%= f.password_field :password_confirmation, placeholder: "Подтверждение пароля", autocomplete: "new-password", type: "password" %>
        </div>
        <div class="session_actions">
          <div class="EnterButtonWrapper">
          <%= f.submit "Зарегистрироваться", class: "SignUpButton" %>
          <% end %>

          <%- if controller_name != 'sessions' %>
            <%= link_to "Войти", new_session_path(resource_name) %><br />
          <% end -%>
          </div>
        </div>
  </div>
</section>
