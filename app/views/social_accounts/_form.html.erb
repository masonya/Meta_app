<div class="doc">
  <h2>Аккаунты</h2>
  <%= form_with(model: social_account, local: true) do |form| %>
    <% if social_account.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(social_account.errors.count, "error") %> prohibited this social_account from being saved:</h2>

        <ul>
        <% social_account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="choose">
      <h3>Выберите аккаунт</h3>
      <%= form.select(:title, %w{Выберите Facebook Instagram Tumblr Twitter YouTube}) %>
    </div>

    <div class="login">
      <h3>Введите данные</h3>
        <input type="email" placeholder="E-mail" class="form-control" name="email" value="">
          <div class="col-md-6">
          <input id="password-field" type="password" placeholder="Пароль" class="form-control" name="password">
            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
          </div>
    </div>

    <div class="body">
      <h3>Добавьте комментарий</h3>
      <%= form.text_area :body, placeholder: "Напишите..." %>
    </div>

    <div class="radio_button">
      <h3>Что сделать с аккаунтом?</h3>
      <%= form.radio_button :action, 'Удалить', :checked => true %>
      <%= label :action, 'Удалить' %> <br>
      <%= form.radio_button :action, 'Удалить и вывести средства' %>
      <%= label :action, 'Удалить и вывести средства' %> <br>
      <%= form.radio_button :action, 'Удалить с сообщением' %>
      <%= label :action, 'Удалить с сообщением' %> <br>
      <%= form.radio_button :action, 'Оставить пост' %>
      <%= label :action, 'Оставить пост' %>
    </div>

    <div class="receiver">
      <h3>Получатели</h3>
        <input type="email" placeholder="E-mail" class="form-control" name="email" value="">
    </div>

    <div class="actions">
      <%= form.submit 'Сохранить' %>
    </div>
  <% end %>
</div>
