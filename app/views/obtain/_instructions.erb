<% @inherited_accounts.each do |i| %>
  <% instruction = i.transferable %>
  <% if i.transferable.class == Instruction %>

    <% if i.accepted %>
      <div class="card">
        <div class="previev2 <%= instruction.title %>"></div>
        <div class="TitleWrap">
          <div class="card_title"></div>
          <h4><%= instruction.title %></h4>
          <p class="transmitter_email"><%= instruction.email %></p>
        </div>
      </div>
    <% else %>
      <div class="card">
        <div class="previev_unaccepted"></div>
        <div class="previev2 <%= instruction.title %>"></div>
        <div class="TitleWrap">
          <div class="card_title"></div>
          <h4><%= instruction.title %></h4>
          <p class="transmitter_email"><%= instruction.email %></p>
        </div>

        <div class="editing">
          <div class="ForFake">
            <div class="popup_obtain">
              <div class="ButtonForCard">
                <div class="AcceptWrapper">
                  <li>
                    <%= link_to 'Подтвердить', accept_instruction_account_transfer_path(instruction), method: :put %>
                  </li>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    <% end %>
  <% end %>
<% end %>
