<% @inherited_accounts.each do |i| %>
  <% wallet = i.transferable %>
  <% if i.transferable.class == Wallet %>

    <% if i.accepted %>
    <% else %>
      <div class="card">
        <div class="previev_unaccepted"></div>
        <div class="previev <%= wallet.title %>"></div>
        <div class="TitleWrap">
          <div class="card_title"></div>
          <h4><%= wallet.title %></h4>
          <p class="transmitter_email"><%= wallet.email %></p>
        </div>

        <div class="editing">
          <div class="ForFake">
            <div class="popup_obtain">
              <div class="ActionForCard">
                <h4>Поручение</h4>
                <h5><%= wallet.action  %></h5>
              </div>
              <div class="ButtonForCard">
                <div class="UnacceptWrapper">
                    <%= link_to 'Отказаться', unaccept_wallet_account_transfer_path(wallet), method: :delete, data: { confirm: 'Are you sure?'} %>
                </div>
                <div class="AcceptWrapper">
                    <%= link_to 'Согласиться', accept_wallet_account_transfer_path(wallet), method: :put %>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    <% end %>
  <% end %>
<% end %>
