<p id="notice"><%= notice %></p>

<h1>Death Certificates</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @death_certificates.each do |death_certificate| %>
      <tr>
        <td><%= link_to 'Show', death_certificate %></td>
        <td><%= link_to 'Edit', edit_death_certificate_path(death_certificate) %></td>
        <td><%= link_to 'Destroy', death_certificate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Сохранить', new_death_certificate_path %>
